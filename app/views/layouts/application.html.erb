<!DOCTYPE html>
   <html>
     <head>
       <title><%= yield(:book_name) || "Untitled" %></title>
       <%= stylesheet_link_tag "application" %>
       <%= javascript_include_tag :defaults %>
       <%= csrf_meta_tag %>
       <%= yield(:head) %>
     </head>
     <body>
        <div id="container">
          <% flash.each do |subject_name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{subject_name}" %>
          <% end %>

          <%= content_tag :h1, yield(:book_name) %>
          <%= yield %>
        </div>
     </body>
   </html>